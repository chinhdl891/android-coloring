<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#763DDD"
    tools:context=".AboutDeveloper">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="218dp"
        android:layout_height="201dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="84dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/hacker" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="389dp"
        android:layout_height="165dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:background="#989393"
        android:fontFamily="@font/aclonica"
        android:padding="10dp"
        android:text="Hello ! I'm Rahul Gupta. I turns coffee to code and currently pursuing CSE @GHRCEM."
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="144dp"
        android:fontFamily="@font/amaranth"
        android:text="Follow Me On"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="23dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <ImageView
        android:id="@+id/imgGithub"
        android:layout_width="64dp"
        android:layout_height="52dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="84dp"
        android:onClick="openGithub"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/github" />

    <ImageView
        android:id="@+id/imgInsta"
        android:layout_width="64dp"
        android:layout_height="52dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="84dp"
        android:onClick="openInsta"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgGithub"
        app:srcCompat="@drawable/instagram" />

    <ImageView
        android:id="@+id/imgTwitter"
        android:layout_width="64dp"
        android:layout_height="52dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="84dp"
        android:onClick="openTwitter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgInsta"
        app:srcCompat="@drawable/twitter" />

    <ImageView
        android:id="@+id/imgMedian"
        android:layout_width="64dp"
        android:layout_height="52dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="84dp"
        android:onClick="openMedian"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgTwitter"
        app:srcCompat="@drawable/medium" />
</androidx.constraintlayout.widget.ConstraintLayout>